# ============================================================================
# ZABATDA MVP Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit the .env file to version control!

# ============================================================================
# Database Configuration (Supabase PostgreSQL)
# ============================================================================
# Get these values from: Supabase Dashboard > Settings > Database > Connection String

SUPABASE_DB_HOST=db.xxxxxxxxxxxxx.supabase.co
SUPABASE_DB_PORT=5432
SUPABASE_DB_NAME=postgres
SUPABASE_DB_USER=postgres
SUPABASE_DB_PASSWORD=your-database-password-here

# ============================================================================
# Flask Configuration
# ============================================================================

# Environment: development or production
FLASK_ENV=development

# Debug mode: True for development, False for production
# WARNING: NEVER set to True in production!
FLASK_DEBUG=True

# Server port (default: 5001 because macOS AirPlay uses 5000)
FLASK_PORT=5001

# Secret key for session management (generate a random string for production)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=dev-secret-key-change-in-production

# ============================================================================
# CORS Configuration
# ============================================================================
# Comma-separated list of allowed origins
# Development:
ALLOWED_ORIGINS=http://localhost:5001,http://localhost:5000

# Production (add your domain):
# ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ============================================================================
# Rate Limiting
# ============================================================================
# Storage for rate limiting (use Redis in production)
# Development:
RATELIMIT_STORAGE_URL=memory://

# Production with Redis:
# RATELIMIT_STORAGE_URL=redis://localhost:6379

# ============================================================================
# CLIP Model Configuration
# ============================================================================
# Model will download ~600MB on first run and cache locally
CLIP_MODEL_NAME=clip-ViT-B-16
EMBEDDING_DIMENSIONS=512

# ============================================================================
# Application Settings
# ============================================================================
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes
DEFAULT_SEARCH_LIMIT=5
MAX_SEARCH_LIMIT=50
